<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="itemTitleStyle">
        <item name="android:textColor">@color/grey_900</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:maxLines">@integer/int_02</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="itemDescStyle">
        <item name="android:textColor">@color/colorOnSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="EntryChipStyle" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/purple_200</item>
        <item name="chipStrokeColor">@color/colorOnSecondary</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
        <item name="closeIconTint">@color/colorOnSecondary</item>
    </style>
    <style name="FilterChipStyle" parent="Widget.MaterialComponents.Chip.Filter"/>

    <style name="ChoiceChipStyle" parent="Widget.MaterialComponents.Chip.Choice"/>

    <style name="ActionChipStyle" parent="Widget.MaterialComponents.Chip.Action"/>
</resources>