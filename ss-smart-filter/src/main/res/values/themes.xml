<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Item_Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Item_Description">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="EntryChipStyle" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/purple_200</item>
        <item name="chipStrokeColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="closeIconTint">@color/black</item>
    </style>
    <style name="FilterChipStyle" parent="Widget.MaterialComponents.Chip.Filter"/>

    <style name="ChoiceChipStyle" parent="Widget.MaterialComponents.Chip.Choice"/>

    <style name="ActionChipStyle" parent="Widget.MaterialComponents.Chip.Action"/>
</resources>