<?xml version="1.0" encoding="utf-8"?>
<resources>



    <style name="Theme.SmartFilter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="SectionSeparator">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/teal_700</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="AppTheme.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <!-- Add attributes for RadioButton style if needed -->
    </style>
    <style name="PresetLayoutButton">
        <item name="android:background">@drawable/background_selector_preset_button</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>